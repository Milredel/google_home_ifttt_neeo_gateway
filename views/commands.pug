p #{device_name}

ul.ul-commands
    each block, index in config
        li.m-auto
            - var collapsableClass = (block.collapsable != undefined && block.collapsable) ? "collapsable" : ""
            p(class="block-title "+collapsableClass) #{block.title}
            div(class="container block "+collapsableClass)
                each line in block.lines
                    - var rowClass = (block.size != undefined) ? "row "+block.size : "row"
                    div(class=rowClass)
                        each elem in line
                            div.col
                                - var buttonLink = elem.button.distantUrl
                                    a(data-link=buttonLink)
                                        if elem.button.classes != undefined && elem.button.classes.length > 0
                                            each myClass in elem.button.classes
                                                i(class='fa fa-lg '+myClass)
                                        else
                                            - var buttonClass = elem.button.class        
                                            if buttonClass != "" && buttonClass != undefined
                                                i(class='fa fa-lg '+buttonClass)
                                            else
                                                | #{elem.button.label}
